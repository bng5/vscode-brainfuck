{
  "name": "vscode-brainfuck",
  "displayName": "Brainfuck",
  "version": "0.1.0",
  "description": "Brainfuck debugger for Visual Studio Code",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "author": {
    "name": "Pablo Bangueses",
    "email": "pablo@bng5.net"
  },
  "license": "MIT",
  "publisher": "bng5",
  "keywords": [],
  "engines": {
    "vscode": "^1.49.0"
  },
  "categories": [
    "Debuggers",
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bng5/vscode-brainfuck.git"
  },
  "bugs": {
    "url": "https://github.com/bng5/vscode-brainfuck/issues"
  },
  "activationEvents": [
    "onDebug",
    "onCommand:extension.brainfuck.runEditorContents",
    "onCommand:extension.brainfuck.debugEditorContents"
  ],
  "contributes": {
    "breakpoints": [
      {
        "language": "brainfuck"
      }
    ],
    "commands": [
      {
        "command": "extension.brainfuck.debugEditorContents",
        "title": "Debug File",
        "category": "Brainfuck",
        "enablement": "!inDebugMode",
        "icon": "$(debug-alt)"
      },
      {
        "command": "extension.brainfuck.runEditorContents",
        "title": "Run File",
        "category": "Brainfuck",
        "enablement": "!inDebugMode",
        "icon": "$(play)"
      }
    ],
    "debuggers": [
      {
        "type": "brainfuck",
        "label": "Brainfuck",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a text file.",
                "default": "${file}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "brainfuck",
            "request": "launch",
            "name": "Debug file",
            "program": "${file}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Brainfuck: Launch",
            "description": "Debug file.",
            "body": {
              "type": "brainfuck",
              "request": "launch",
              "name": "Debug file",
              "program": "^\"\\${file}\"",
              "stopOnEntry": true
            }
          }
        ],
        "languages": ["brainfuck"]
      }
    ],
    "grammars": [
      {
        "language": "brainfuck",
        "scopeName": "source.brainfuck",
        "path": "./syntaxes/bf.tmLanguage.json"
      }
    ],
    "languages": [
      {
        "id": "brainfuck",
        "aliases": [
          "Brainfuck",
          "bf"
        ],
        "extensions": [
          ".bf",
          ".b"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.brainfuck.runEditorContents",
          "when": "resourceLangId == brainfuck",
          "group": "1_run@10"
        },
        {
          "command": "extension.brainfuck.debugEditorContents",
          "when": "resourceLangId == brainfuck",
          "group": "1_run@20"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.brainfuck.runEditorContents",
          "when": "resourceLangId == brainfuck"
        },
        {
          "command": "extension.brainfuck.debugEditorContents",
          "when": "resourceLangId == brainfuck"
        }
      ],
      "debug/variables/context": [
        {
          "command": "extension.brainfuck.runEditorContents",
          "when": "debugType == 'brainfuck' && debugProtocolVariableMenuContext == 'simple'"
        }
      ]
    }
  },
  "dependencies": {
    "await-notify": "^1.0.1",
    "vscode-debugadapter": "^1.43.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.52.0",
    "ts-loader": "^8.0.12",
    "typescript": "^4.1.3",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.0"
  }
}
